{
  "apiVersion": "v1",
  "kind": "Template",
  "labels": {
    "template": "infinispan-ephemeral"
  },
  "metadata": {
    "annotations": {
      "description": "Infinispan 9 (Ephemeral)",
      "iconClass": "icon-infinispan",
      "tags": "java,database,datagrid,jboss",
      "template.openshift.io/documentation-url": "http://infinispan.org/documentation/",
      "template.openshift.io/long-description": "This template provides a standalone Infinispan server (a high performance, scalable, key/value data grid solution) without persistence (in other words your data will be lost upon restart).",
      "template.openshift.io/provider-display-name": "Red Hat, Inc.",
      "template.openshift.io/support-url": "http://infinispan.org"
    },
    "name": "infinispan-ephemeral"
  },
  "objects": [
    {
      "kind": "ServiceAccount",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}"
      }
    },
    {
      "kind": "RoleBinding",
      "apiVersion": "v1",
      "metadata": {
        "name": "view"
      },
      "userNames": [
        "system:serviceaccount:myproject:${APPLICATION_NAME}"
      ],
      "groupNames": null,
      "subjects": [
        {
          "kind": "ServiceAccount",
          "name": "${APPLICATION_NAME}"
        }
      ],
      "roleRef": {
        "name": "view"
      }
    },
    {
      "kind": "Secret",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}",
        "annotations": {
          "template.openshift.io/expose-infinispan.client.hotrod.auth_username": "{.data['application-user']}",
          "template.openshift.io/expose-infinispan.client.hotrod.auth_password": "{.data['application-password']}"
        }
      },
      "stringData" : {
        "application-user": "${APPLICATION_USER}",
        "application-password": "${APPLICATION_PASSWORD}",
        "management-user": "${MANAGEMENT_USER}",
        "management-password": "${MANAGEMENT_PASSWORD}"
      }
    },
    {
      "kind": "ConfigMap",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}-jolokia",
        "labels": {
          "application": "${APPLICATION_NAME}"
        }
      },
      "data": {
        "agent.conf": "jolokia=port=8778,protocol=https,caCert=/var/run/secrets/kubernetes.io/serviceaccount/ca.crt,clientPrincipal=cn=system:master-proxy,useSslClientAuthentication=true,extraClientCheck=true,host=0.0.0.0,discoveryEnabled=false"
      }
    },
    {
      "kind": "ConfigMap",
      "apiVersion": "v1",
      "metadata": {
        "labels": {
          "name": "${APPLICATION_NAME}-hawkular-openshift-agent"
        },
        "name": "${APPLICATION_NAME}-hawkular-openshift-agent"
      },
      "data": {
        "hawkular-openshift-agent": "endpoints:\n- type: jolokia\n  protocol: https\n  port: 8778\n  path: /jolokia/\n  collection_interval: 15s\n  tls:\n    skip_certificate_validation: true\n  metrics:\n  # int data value\n  - name: java.lang:type=Memory#ObjectPendingFinalizationCount\n    type: gauge\n    description: Object Pending Finalization Count\n  # long data value\n  - name: java.lang:type=OperatingSystem#OpenFileDescriptorCount\n    type: gauge\n    description: Open File Descriptor Count\n  # double data value\n  - name: java.lang:type=OperatingSystem#ProcessCpuLoad\n    type: gauge\n    description: Process CPU Load\n  # composite data value\n  - name: java.lang:type=Memory#HeapMemoryUsage#used\n    type: gauge\n    description: Heap Memory Used\n    units: B\n  # boolean value\n  - name: java.lang:type=Memory#Verbose\n    type: gauge\n    description: Memory Verbose Mode\n  # multiple attributes/multiple mbeans\n  - name: jboss.as:subsystem=datasources,data-source=*,statistics=jdbc#*\n    type: gauge\n"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "annotations": {
          "description": "The web server's HTTP port."
        },
        "labels": {
          "application": "${APPLICATION_NAME}"
        },
        "name": "${APPLICATION_NAME}-http"
      },
      "spec": {
        "ports": [
          {
            "port": 8080,
            "targetPort": 8080
          }
        ],
        "selector": {
          "deploymentConfig": "${APPLICATION_NAME}"
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "annotations": {
          "description": "The management console."
        },
        "labels": {
          "application": "${APPLICATION_NAME}"
        },
        "name": "${APPLICATION_NAME}-management"
      },
      "spec": {
        "ports": [
          {
            "port": 9990,
            "targetPort": 9990
          }
        ],
        "selector": {
          "deploymentConfig": "${APPLICATION_NAME}"
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "annotations": {
          "description": "Hot Rod's port.."
        },
        "labels": {
          "application": "${APPLICATION_NAME}"
        },
        "name": "${APPLICATION_NAME}-hotrod"
      },
      "spec": {
        "ports": [
          {
            "port": 11222,
            "targetPort": 11222
          }
        ],
        "selector": {
          "deploymentConfig": "${APPLICATION_NAME}"
        }
      }
    },
    {
      "apiVersion": "v1",
      "id": "${APPLICATION_NAME}-management",
      "kind": "Route",
      "metadata": {
        "annotations": {
          "description": "Route for the management console."
        },
        "labels": {
          "application": "${APPLICATION_NAME}"
        },
        "name": "${APPLICATION_NAME}-management"
      },
      "spec": {
        "to": {
          "kind": "Service",
          "name": "${APPLICATION_NAME}-management"
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "labels": {
          "application": "${APPLICATION_NAME}"
        },
        "name": "${APPLICATION_NAME}"
      },
      "spec": {
        "replicas": 3,
        "selector": {
          "deploymentConfig": "${APPLICATION_NAME}"
        },
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 20,
            "intervalSeconds": 20,
            "timeoutSeconds": 1200,
            "maxUnavailable": 1,
            "maxSurge": 1
          }
        },
        "template": {
          "metadata": {
            "labels": {
              "application": "${APPLICATION_NAME}",
              "deploymentConfig": "${APPLICATION_NAME}"
            },
            "name": "${APPLICATION_NAME}"
          },
          "spec": {
            "containers": [
              {
                "args": [
                  "cloud.xml",
                  "-Djboss.default.jgroups.stack=kubernetes",
                  "--jmx",
                  "/usr/share/jolokia/agent.conf"
                ],
                "env": [
                  {
                    "name": "OPENSHIFT_KUBE_PING_LABELS",
                    "value": "application=${APPLICATION_NAME}"
                  },
                  {
                    "name": "OPENSHIFT_KUBE_PING_NAMESPACE",
                    "valueFrom": {
                      "fieldRef": {
                        "fieldPath": "metadata.namespace"
                      }
                    }
                  },
                  {
                    "name": "MGMT_USER",
                    "value": "${MANAGEMENT_USER}"
                  },
                  {
                    "name": "MGMT_PASS",
                    "value": "${MANAGEMENT_PASSWORD}"
                  },
                  {
                    "name": "APP_USER",
                    "value": "${APPLICATION_USER}"
                  },
                  {
                    "name": "APP_PASS",
                    "value": "${APPLICATION_PASSWORD}"
                  }
                ],
                "image": "infinispan",
                "imagePullPolicy": "Always",
                "livenessProbe": {
                  "exec": {
                    "command": [
                      "/usr/local/bin/is_running.sh"
                    ]
                  },
                  "initialDelaySeconds": 10,
                  "timeoutSeconds": 80,
                  "periodSeconds": 60,
                  "successThreshold": 1,
                  "failureThreshold": 5
                },
                "readinessProbe": {
                  "exec": {
                    "command": [
                      "/usr/local/bin/is_healthy.sh"
                    ]
                  },
                  "initialDelaySeconds": 10,
                  "timeoutSeconds": 80,
                  "periodSeconds": 60,
                  "successThreshold": 2,
                  "failureThreshold": 5
                },
                "name": "${APPLICATION_NAME}",
                "ports": [
                  {
                    "containerPort": 8080,
                    "name": "http",
                    "protocol": "TCP"
                  },
                  {
                    "containerPort": 9990,
                    "name": "management",
                    "protocol": "TCP"
                  },
                  {
                    "containerPort": 8888,
                    "name": "ping",
                    "protocol": "TCP"
                  },
                  {
                    "containerPort": 11222,
                    "name": "hotrod",
                    "protocol": "TCP"
                  },
                  {
                    "containerPort": 8778,
                    "name": "jolokia",
                    "protocol": "TCP"
                  }
                ],
                "volumeMounts": [
                  {
                    "name": "${APPLICATION_NAME}-jolokia",
                    "mountPath": "/usr/share/jolokia"
                  }
                ]
              }
            ],
            "terminationGracePeriodSeconds": 120,
            "serviceAccountName": "${APPLICATION_NAME}",
            "volumes": [
              {
                "name": "${APPLICATION_NAME}-jolokia",
                "configMap": {
                  "name": "${APPLICATION_NAME}-jolokia"
                }
              },
              {
                "name": "hawkular-openshift-agent",
                "configMap": {
                  "name": "${APPLICATION_NAME}-hawkular-openshift-agent"
                }
              }
            ]
          }
        },
        "triggers": [
          {
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "${APPLICATION_NAME}"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "infinispan:${IMAGE_VERSION}",
                "namespace": "${IMAGE_STREAM_NAMESPACE}"
              }
            },
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          }
        ]
      }
    }
  ],
  "parameters": [
    {
      "description": "The name for the application.",
      "name": "APPLICATION_NAME",
      "required": true,
      "value": "infinispan-app"
    },
    {
      "description": "Username for accessing REST (and possible Hot Rod) endpoint.",
      "name": "APPLICATION_USER",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{8}"
    },
    {
      "description": "Password for accessing REST (and possible Hot Rod) endpoint.",
      "name": "APPLICATION_PASSWORD",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{8}"
    },
    {
      "description": "Username for accessing management console.",
      "name": "MANAGEMENT_USER",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{8}"
    },
    {
      "description": "Password for accessing management console.",
      "name": "MANAGEMENT_PASSWORD",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{8}"
    },
    {
      "description": "Infinispan image version.",
      "name": "IMAGE_VERSION",
      "required": true,
      "value": "9.0"
    },
    {
      "description": "Namespace in which the ImageStreams for Red Hat Middleware images are installed. These ImageStreams are normally installed in the openshift namespace. You should only need to modify this if you've installed the ImageStreams in a different namespace/project.",
      "name": "IMAGE_STREAM_NAMESPACE",
      "required": true,
      "value": "openshift"
    }
  ]
}
